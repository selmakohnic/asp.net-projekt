@model smalandscamping.Models.Booking

@{
    ViewData["Title"] = "Avboka bokning";
}

<!-- Brödsmulor -->
<p class="wrapper breadcrumbWrapper"><span class="breadcrumbItemLoggedIn">Inloggad</span> / <a class="breadcrumbItem" asp-area="" asp-controller="Bookings" asp-action="Index">Hem</a> / Avboka bokning</p>

<div id="lightBackground">
    <div id="border-top"></div>
    <div class="wrapperAuthentication margin">
        <i class="fas fa-trash-alt cottageIcon"></i>
        <h1 class="title">Avboka bokning</h1>

        <!-- Information om den bokning som användaren vill avboka -->
        <dl class="row">
            <dt>
                Stuga
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cottage.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cottage.NumberOfGuest)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cottage.NumberOfGuest)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cottage.AnimalsAllowed)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cottage.AnimalsAllowed)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DateArrival)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateArrival)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DateLeaving)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateLeaving)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TotalPrice) kr
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BookingId" />
            <input type="submit" value="Avboka" class="authenticationBtn btn" />
            <a asp-action="Index" class="linkBack"><i class="fas fa-chevron-left"></i> Tillbaka till bokningarna</a>
        </form>
    </div>
    <div id="border-bottom"></div>
</div>
