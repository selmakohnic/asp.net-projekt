@model smalandscamping.Models.Booking

@{
    ViewData["Title"] = "Edit";
    string animalsAllowed = Convert.ToString(ViewData["animalsallowed"]);  
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />
            <input type="text" value="@ViewData["cottageprice"]" name="price" />
            <div class="form-group">
                <label asp-for="DateArrival" class="control-label"></label>
                <input asp-for="DateArrival" class="form-control" />
                <span asp-validation-for="DateArrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateLeaving" class="control-label"></label>
                <input asp-for="DateLeaving" class="form-control" />
                <span asp-validation-for="DateLeaving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

