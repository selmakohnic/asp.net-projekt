@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul>
        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Cottages" asp-action="Index">Stugor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Bookings" asp-action="Index">Bokningar</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Bookings" asp-action="Index">Bokningar</a>
                </li>
            }

            <li class="nav-item">
                <form class="formLogout" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="logoutBtn">Logga ut</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Registrera konto</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
            </li>
        }
    </ul>
